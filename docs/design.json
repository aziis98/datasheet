{
    "design_system": {
        "name": "DataSheet Design System",
        "version": "1.0.0",
        "description": "A comprehensive design system for data viewing and query building interfaces",
        "components": {
            "header": {
                "name": "Page Header",
                "description": "Main title section at the top of the page",
                "properties": {
                    "title": {
                        "type": "text",
                        "size": "large",
                        "weight": "bold",
                        "color": "#000000"
                    },
                    "background_color": "#ffffff"
                }
            },
            "query_builder": {
                "name": "Query Builder Bar",
                "description": "Interactive input area for constructing SQL queries with helper text",
                "properties": {
                    "input_field": {
                        "type": "text_input",
                        "placeholder": "SELECT table.column, ... (shift-click columns to build query)",
                        "background_color": "#f5f5f5",
                        "border": "0.0625rem solid #e0e0e0",
                        "border_radius": "0.25rem",
                        "padding": "0.75rem 1rem"
                    },
                    "action_buttons": {
                        "primary_button": {
                            "label": "Create View",
                            "background_color": "#0052cc",
                            "text_color": "#ffffff",
                            "border_radius": "0.25rem",
                            "padding": "0.625rem 1.5rem"
                        },
                        "secondary_button": {
                            "label": "Clear",
                            "background_color": "#ffffff",
                            "text_color": "#000000",
                            "border": "0.0625rem solid #e0e0e0",
                            "border_radius": "0.25rem",
                            "padding": "0.625rem 1.5rem"
                        }
                    }
                }
            },
            "sidebar": {
                "name": "Left Sidebar Navigation",
                "description": "Navigation panel containing tables, views, and data sources",
                "properties": {
                    "section_header": {
                        "label": "Tables",
                        "type": "text",
                        "weight": "bold",
                        "color": "#000000"
                    },
                    "list_item": {
                        "types": ["aggregation", "filter", "view", "join", "source"],
                        "item_structure": {
                            "icon": {
                                "type": "icon",
                                "color": "#666666"
                            },
                            "label": {
                                "type": "text",
                                "size": "small",
                                "color": "#000000"
                            },
                            "action_link": {
                                "label": "view",
                                "type": "text_link",
                                "color": "#0052cc",
                                "text_decoration": "none"
                            }
                        }
                    },
                    "background_color": "#ffffff",
                    "border_right": "1px solid #e0e0e0",
                    "padding": "16px",
                    "width": "320px"
                }
            },
            "data_table": {
                "name": "Results Table",
                "description": "Displays query results or table data in rows and columns",
                "properties": {
                    "container": {
                        "background_color": "#ffffff",
                        "border": "1px solid #e0e0e0",
                        "border_radius": "4px",
                        "padding": "0"
                    },
                    "header_row": {
                        "background_color": "#f9f9f9",
                        "border_bottom": "1px solid #e0e0e0",
                        "padding": "12px 16px"
                    },
                    "header_cell": {
                        "type": "text",
                        "weight": "semibold",
                        "color": "#000000",
                        "size": "small"
                    },
                    "data_row": {
                        "background_color": "#ffffff",
                        "border_bottom": "1px solid #f0f0f0",
                        "padding": "12px 16px",
                        "hover_background": "#f5f5f5"
                    },
                    "data_cell": {
                        "type": "text",
                        "color": "#333333",
                        "size": "small"
                    },
                    "alternating_rows": {
                        "enabled": false
                    }
                }
            },
            "result_badge": {
                "name": "Result Count Badge",
                "description": "Displays the number of rows returned by a query",
                "properties": {
                    "background_color": "#f0f0f0",
                    "text_color": "#666666",
                    "border_radius": "4px",
                    "padding": "4px 8px",
                    "size": "small",
                    "position": "top_right"
                }
            },
            "query_label": {
                "name": "Query Description Label",
                "description": "Shows the SQL query or operation description above table results",
                "properties": {
                    "icon": {
                        "type": "checkmark_circle",
                        "color": "#00b42a"
                    },
                    "text": {
                        "type": "text",
                        "color": "#000000",
                        "weight": "semibold",
                        "size": "small"
                    },
                    "query_text": {
                        "type": "text",
                        "color": "#666666",
                        "size": "small",
                        "font_family": "monospace"
                    }
                }
            }
        },
        "typography": {
            "font_family": "system-ui, -apple-system, sans-serif",
            "sizes": {
                "large": "1.5rem",
                "medium": "1rem",
                "small": "0.875rem",
                "tiny": "0.75rem"
            },
            "weights": {
                "bold": 700,
                "semibold": 600,
                "normal": 400,
                "light": 300
            }
        },
        "colors": {
            "primary": "#0052cc",
            "text_primary": "#000000",
            "text_secondary": "#666666",
            "background_light": "#f9f9f9",
            "background_neutral": "#f5f5f5",
            "border": "#e0e0e0",
            "success": "#00b42a",
            "white": "#ffffff"
        },
        "spacing": {
            "xs": "0.25rem",
            "sm": "0.5rem",
            "md": "0.75rem",
            "lg": "1rem",
            "xl": "1.5rem"
        },
        "layout": {
            "sidebar_width": "20rem",
            "main_content_gap": "1rem",
            "section_gap": "1.5rem"
        }
    }
}
